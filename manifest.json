{
  "manifest_version": 3,
  "name": "One click",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://accounts.google.com/*",
    "https://www.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "assets/tailwind.min.css",
        "assets/font-awesome.min.css"
      ]
    }
  ],
  "web_accessible_resources": ["icon.svg"],
  "commands": {
    "trigger-login": {
      "suggested_key": {
        "default": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Trigger login process"
    }
  },
  "icons": {
    "16": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  }
}